<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.happy.day02.entity">
    <class name="House" table="House" schema="happy">
        <id name="id"  column="id">
            <!-- native   数据库方言的可移植性 -->
            <generator class="native"/>
        </id>
        <property name="title" column="title"/>
        <property name="description" column="description"/>
        <property name="price" column="price"/>
        <property name="pubdate" column="pubdate"/>
        <property name="floorage" column="floorage"/>
        <property name="contact" column="contact"/>
        <property name="user_id" column="user_id"/>
        <property name="type_id" column="type_id"/>
        <property name="street_id" column="street_id"/>
    </class>
</hibernate-mapping>